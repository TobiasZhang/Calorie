<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fefefe">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/z_bg2"
        >
        <RelativeLayout
            android:id="@+id/drawerLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/nicknameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="王二狗狗"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:textSize="17sp"
                android:paddingTop="8dp"
                android:paddingBottom="13dp"
                android:paddingLeft="20dp"
                android:singleLine="true"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:roundAsCircle="true"
                android:layout_above="@id/nicknameTxt"
                android:layout_marginLeft="17dp"
                app:placeholderImage="@drawable/avatar_default"
                android:layout_gravity="center_horizontal"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/drawerGuest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/z_bg1"
            android:visibility="visible"
            >
            <Button
                android:id="@+id/loginBtn"
                android:layout_width="175dp"
                android:layout_height="35dp"
                android:text="立即登录"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日一跑，健康饮食"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_above="@id/loginBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即登陆卡路里"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_above="@id/txt2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/divider1"
        android:layout_width="wrap_content"
        android:layout_height="0.4dp"
        android:background="@color/drawerOptionsDivider"
        android:layout_below="@id/header"
        android:layout_marginTop="20dp"
        />
    <RelativeLayout
        android:id="@+id/clearCacheBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清除缓存"
            style="@style/DrawerOptionsTxt"
            />
    </RelativeLayout>
    <View
        style="@style/DrawerOptionsDivider"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        />
    <RelativeLayout
        android:id="@+id/feedbackBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            style="@style/DrawerOptionsTxt"
            />
    </RelativeLayout>
    <View
        style="@style/DrawerOptionsDivider"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        />
    <RelativeLayout
        android:id="@+id/encourageBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="鼓励我们"
            style="@style/DrawerOptionsTxt"
            />
    </RelativeLayout>
    <View
        style="@style/DrawerOptionsDivider"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        />
    <RelativeLayout
        android:id="@+id/shareAppBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="把「卡路里」分享给别人"
            style="@style/DrawerOptionsTxt"
            />
    </RelativeLayout>
    <View
        style="@style/DrawerOptionsDivider"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        />
    <RelativeLayout
        android:id="@+id/aboutUsBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=" 关于「卡路里」"
            style="@style/DrawerOptionsTxt"
            />
    </RelativeLayout>
    <View
        style="@style/DrawerOptionsDivider"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        />
    <RelativeLayout
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="退出登录"
            style="@style/DrawerOptionsTxt"
            />
    </RelativeLayout>
    <View
        style="@style/DrawerOptionsDivider"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        />
</LinearLayout>