<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="23dp"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <RelativeLayout
           android:id="@+id/header"
           android:layout_width="match_parent"
           style="@style/HomeHeader"
           android:background="@color/homeWeightBackground"
           >
           <ImageView
               android:id="@+id/iconView"
               style="@style/HomeHeaderIcon"
               android:src="@drawable/zz_home_test"
               />
           <TextView
               android:id="@+id/descTxt"
               android:text="记录每日的体重变化，\n激励自己每天更好的生活"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/HomeHeaderDescTxt"
               />
           <TextView
               android:id="@+id/titleTxt"
               android:text="体重记录"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/HomeHeaderTitleTxt"
               />
           <TextView
               android:id="@+id/processTagTxt"
               android:text="未达成"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/HomeProcessTagTxt"
               />
       </RelativeLayout>
       <ImageButton
           android:id="@+id/editBtn"
           style="@style/HomeEditBtn"
           android:src="@drawable/home_edit_pen"
           />
       <!--未记录-->
       <FrameLayout
           android:id="@+id/unRecordBlock"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="-10dp"
           android:layout_below="@id/editBtn"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="今日尚未记录"
               android:textColor="@color/homeWeightForeground"
               android:textSize="12sp"
               android:layout_marginLeft="20dp"
               android:layout_marginBottom="15dp"
               />
       </FrameLayout>
       <!--已记录-->
       <LinearLayout
           android:id="@+id/recordBlock"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_below="@id/editBtn"
           android:layout_marginTop="-10dp"

           android:paddingBottom="10dp"
           android:gravity="center_vertical"
           android:visibility="gone"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/weight"
               android:layout_marginLeft="20dp"/>
           <TextView
               android:id="@+id/weightTxt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="80kg"
               android:textColor="@color/homeWeightForeground"
               android:textSize="18sp"
               android:layout_marginLeft="2dp"
               />
       </LinearLayout>
   </RelativeLayout>
</android.support.v7.widget.CardView>