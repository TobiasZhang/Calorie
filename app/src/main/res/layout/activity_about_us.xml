<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context=".ui.AboutUsActivity"
    >
    <include android:id="@+id/toolbarBlock" layout="@layout/include_toolbar"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/appIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:roundedCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbarBlock"
        android:layout_marginTop="60dp"
        />
    <TextView
        android:id="@+id/appNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="应用名称"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appIcon"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/disclaimerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="免责声明"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/appVersionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="版本号"
        android:layout_above="@id/disclaimerBtn"
        android:textAllCaps="false"
        />
</RelativeLayout>