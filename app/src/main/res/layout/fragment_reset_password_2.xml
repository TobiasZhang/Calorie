<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@android:color/white"
              tools:context=".ui.fragment.ResetPasswordFragment2"

    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/passwordBlock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <CheckBox
            android:id="@+id/passwordEye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableRight="@drawable/selector_chkbox_eye"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <EditText
            android:id="@+id/passwordTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="设置新密码"
            android:layout_toLeftOf="@id/passwordEye"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rePasswordBlock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/passwordBlock">
        <CheckBox
            android:id="@+id/rePasswordEye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableRight="@drawable/selector_chkbox_eye"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <EditText
            android:id="@+id/rePasswordTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="再次输入新密码"
            android:layout_toLeftOf="@id/rePasswordEye"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/okBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成"

        android:layout_alignParentBottom="true"/>
</RelativeLayout>