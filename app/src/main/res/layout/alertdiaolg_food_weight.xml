<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        >
    <TextView
        android:id="@+id/pickerTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择重量"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"

        />
    <TextView
        android:id="@+id/weightNumTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="72.5/g"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        />
    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/foodWeightPicker"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:np_min="1"
        app:np_max="100"
        app:np_formatter="%d0"
        app:np_orientation="horizontal"
        app:np_textSize="14sp"
        app:np_dividerColor="@color/colorAccent"
        app:np_wheelItemCount="8"
        app:np_dividerDistance="40dp"
        android:background="@drawable/background_number_picker"
        android:layout_below="@id/pickerTitleTxt"
        ></com.shawnlin.numberpicker.NumberPicker>
        <Button
            android:id="@+id/okBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认"
            android:layout_below="@id/foodWeightPicker"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</FrameLayout>