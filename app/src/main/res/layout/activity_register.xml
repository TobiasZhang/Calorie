<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterActivity">
    <include android:id="@+id/toolbarBlock" layout="@layout/include_toolbar"/>
    <EditText
        android:id="@+id/telTxt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:singleLine="true"
        android:hint="请输入手机号"
        android:inputType="number"
        android:layout_below="@id/toolbarBlock"/>
    <RelativeLayout
        android:id="@+id/passwordBlock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/telTxt">
        <CheckBox
            android:id="@+id/passwordEye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableRight="@drawable/selector_chkbox_eye"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <EditText
            android:id="@+id/passwordTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:layout_toLeftOf="@id/passwordEye"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/passwordBlock">
        <Button
            android:id="@+id/getValidationCodeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点我获取"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <EditText
            android:id="@+id/validationCodeTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:inputType="number"
            android:hint="请输入手机验证码"
            android:layout_toLeftOf="@id/getValidationCodeBtn"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
